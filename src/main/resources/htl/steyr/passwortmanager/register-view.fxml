<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="htl.steyr.passwortmanager.controller.RegisterController"
      spacing="20"
      alignment="CENTER"
      styleClass="auth-card">

    <padding>
        <Insets top="32" right="40" bottom="32" left="40"/>
    </padding>

    <Label text="Create account"
           styleClass="auth-title"/>

    <TextField fx:id="registerUsernameField"
               promptText="Username"
               styleClass="auth-input"/>

    <PasswordField fx:id="registerPasswordField"
                   promptText="Master Password"
                   styleClass="auth-input"/>

    <PasswordField fx:id="confirmPasswordField"
                   promptText="Confirm Password"
                   styleClass="auth-input"/>

    <Button text="Register"
            onAction="#registerButtonClicked"
            styleClass="auth-button"/>

    <Label fx:id="errorLabel"
           visible="false"
           styleClass="auth-error"/>

</VBox>
