<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="htl.steyr.passwortmanager.controller.RegisterController"
      spacing="18"
      alignment="CENTER"
      styleClass="auth-card">

    <padding>
        <Insets top="36" right="42" bottom="36" left="42"/>
    </padding>

    <Label text="Account erstellen" styleClass="auth-title"/>

    <TextField fx:id="registerUsernameField"
               promptText="Username"
               styleClass="auth-input"/>

    <PasswordField fx:id="registerPasswordField"
                   promptText="Master-Passwort"
                   styleClass="auth-input"/>

    <PasswordField fx:id="confirmPasswordField"
                   promptText="Passwort bestÃ¤tigen"
                   styleClass="auth-input"/>

    <Button text="Registrieren"
            defaultButton="true"
            onAction="#registerButtonClicked"
            styleClass="auth-button"/>

    <Label fx:id="errorLabel"
           visible="false"
           styleClass="auth-error"/>

</VBox>

