<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="htl.steyr.passwortmanager.controller.LoginController"
      spacing="18"
      alignment="CENTER"
      styleClass="auth-card">

    <padding>
        <Insets top="36" right="42" bottom="36" left="42"/>
    </padding>

    <Label text="Login" styleClass="auth-title"/>

    <TextField fx:id="usernameField"
               promptText="Username"
               styleClass="auth-input"/>

    <PasswordField fx:id="passwordField"
                   promptText="Passwort"
                   styleClass="auth-input"/>

    <Button text="Login"
            defaultButton="true"
            onAction="#loginClicked"
            styleClass="auth-button"/>

    <Label fx:id="errorLabel"
           visible="false"
           styleClass="auth-error"/>

</VBox>
