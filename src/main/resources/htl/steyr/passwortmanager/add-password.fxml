<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="htl.steyr.passwortmanager.controller.AddPasswordController"
      spacing="12"
      styleClass="popup-card">

   <Label text="Neues Passwort" styleClass="popup-title"/>

   <TextField fx:id="websiteAppTF" promptText="Website / App"/>
   <TextField fx:id="usernameTF" promptText="Username"/>
   <PasswordField fx:id="passwordPF" promptText="Passwort"/>

   <TextArea fx:id="noteTA" promptText="Notiz" prefRowCount="3"/>

   <ComboBox fx:id="tagCB" promptText="Kategorie"/>
   <ComboBox fx:id="securityTagCB" promptText="Security-Level"/>

   <Button text="Speichern" onAction="#saveClicked" styleClass="auth-button"/>
</VBox>
