<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@auth.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="htl.steyr.passwortmanager.controller.MainController">

   <!-- Sidebar -->
   <left>
      <VBox prefWidth="220" spacing="12" styleClass="sidebar">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>

         <Label styleClass="logo" text="DMVault" />
         <Button styleClass="nav-btn" text="PasswÃ¶rter" />
         <Button styleClass="nav-btn" text="Einstellungen" />
      </VBox>
   </left>

   <!-- Header -->
   <top>
      <HBox alignment="CENTER_RIGHT" spacing="12">
         <padding>
            <Insets bottom="16" left="16" right="16" top="16" />
         </padding>

         <TextField fx:id="searchTF" prefWidth="260" promptText="Suchen..." styleClass="auth-input" />
      </HBox>
   </top>

   <!-- Table -->
   <center>
      <TableView fx:id="tableView">
         <columns>
            <TableColumn fx:id="hostCol" editable="false" prefWidth="160" resizable="false" text="Name" />
            <TableColumn fx:id="userCol" editable="false" prefWidth="180" resizable="false" text="Benutzer" />
            <TableColumn fx:id="pwCol" editable="false" prefWidth="170" resizable="false" sortable="false" text="Passwort" />
            <TableColumn fx:id="actionCol" editable="false" prefWidth="60" resizable="false" sortable="false" text="ðŸ‘" />
            <TableColumn fx:id="secCol" editable="false" prefWidth="220" resizable="false" text="Sicherheit" />
            <TableColumn fx:id="tagCol" editable="false" prefWidth="210" resizable="false" sortable="false" text="Tag" />
         </columns>
      </TableView>
   </center>
</BorderPane>
